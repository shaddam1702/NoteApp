

<% include ../partials/header %>


<div style="margin-top: 2em;"class="ui main text container">
    <div class="ui huge header">All Available notes</div>

  
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% notes.forEach(function(note){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= note.image %>">
                </div>
               
                <div class="content">
                        <a class="header" href="/indexnote/<%= note._id %>"><%= note.title %></a>
                   <div class="meta">
                       <span><%= note.created.toDateString() %></span>
                   </div>
                   <div class="description">
                       <p><%- note.body.substring(0,100) %>...</p>
                   </div>
                   <div class="extra">
                       <a class="ui basic blue button floated" href="/indexnote/<%= note._id %>">
                           Read More
                           <i class="right chevron icon"></i>
                       </a>
                   </div>
               </div>
           </div>
        <% }); %>
        </div>
    </div>
</div>

<% include ../partials/footer %>